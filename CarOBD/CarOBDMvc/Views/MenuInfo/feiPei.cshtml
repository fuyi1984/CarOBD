@using Domain
@model MenuInfo
<title>分配</title>
<link href="/easyui/demo/demo.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="/easyui/themes/default/easyui.css" />
<link rel="stylesheet" type="text/css" href="/easyui/themes/icon.css" />
<script type="text/javascript" src="/easyui/jquery.min.js"></script>
<script type="text/javascript" src="/easyui/jquery.easyui.min.js"></script>
<script type="text/javascript" src="/easyui/locale/easyui-lang-zh_CN.js"></script>
<script type="text/javascript" language="javascript">
    function submitForm() {
        var code = 0;

        if ($("#ID").val() == code) {

            jude();
            //post();
        }
        else {

            jude();
            //post();
        }
    }


    function jude() {

        if ($("#ID").val() == 0) {
            var parm = { menuname: $("#MenuNames").val() };

            $.ajax({
                type: "POST",
                url: "/MenuInfo/Exist",
                data: $.param(parm),
                success: function (msg) {

                    if (msg.IsSuccess == "True") {

                        $.messager.alert('提示', "请输入的菜单名已存在，请重新输入！");
                    } else {
                        post();
                    }
                }
            });
        } else {
            post();
        }

    }

    function post() {
        $('#form1').form('submit', {
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (msg) {
                $.messager.alert('提示', "保存成功", 'info', function () {
                    window.location.href = "/MenuInfo/Index/";
                });
            }
        });
    }
</script>
<body>
    <form id="form1" action="/MenuInfo/FeiPei/" method="post">
    <div class="easyui-panel" title="菜单分配" style="width: auto" data-options="collapsible:true,border:true">
        <div style="padding: 10px 0 10px 100px;">
            <table style="text-align: center; width: auto">
                <tr>
                    <td>
                        菜单名:
                    </td>
                    <td>
                        <select style="width: 130px;" class="easyui-combobox" name="menuId" id="MenuId"
                            data-options="required:true,editable:false">
                            @foreach (MenuInfo item in ViewBag.MenuInfo)
                            {
  
                                <option value="@item.MenuId" selected="selected">@item.MenuNames</option>

      
                            }
                        </select>
                    </td>
                </tr>
                 <tr>
                    <td>
                        栏目名:
                    </td>
                    <td>
                        <select style="width: 130px;" class="easyui-combobox" name="columnId" id="ColumnId"
                            data-options="required:true,editable:false">
                            @foreach (ColumnmenuInfo item in ViewBag.Column)
                            {
  
                                <option value="@item.MenuId" selected="selected">@item.MenuName</option>

      
                            }
                        </select>
                    </td>
                </tr>
            </table>
        </div>
        <span id="uploadify"></span>
        <div style="text-align: center; padding: 5px 220px 10px 10px">
            <a href="javascript:void(0)" class="easyui-linkbutton" onclick="post()" id="submit"
                iconcls="icon-save">确定</a> <a href="javascript:void(0)" class="easyui-linkbutton"
                    onclick="location.href = document.referrer;" iconcls="icon-cancel">返回</a>
        </div>
    </div>
    </form>
</body>
