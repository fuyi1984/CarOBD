@using Domain
@model Domain.ColumnmenuPermissionsInfo
<title>Edit</title>
<link href="/easyui/demo/demo.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="/easyui/themes/default/easyui.css" />
<link rel="stylesheet" type="text/css" href="/easyui/themes/icon.css" />
<script type="text/javascript" src="/easyui/jquery.min.js"></script>
<script type="text/javascript" src="/easyui/jquery.easyui.min.js"></script>
<script type="text/javascript" src="/easyui/locale/easyui-lang-zh_CN.js"></script>
<script type="text/javascript" language="javascript">
    function submitForm() {
        var code = 0;

        if ($("#ID").val() == code) {

            //jude();
            post();
        }
        else {

            //jude();
            post();
        }
    }


    function jude() {

        if ($("#ID").val() == 0) {
            var parm = { menuname: $("#MenuName").val() };

            $.ajax({
                type: "POST",
                url: "/ColumnmenuPermissionsInfo/Exist",
                data: $.param(parm),
                success: function (msg) {

                    if (msg.IsSuccess == "True") {

                        $.messager.alert('提示', "请输入的用户组名已存在，请重新输入！");
                    } else {
                        post();
                    }
                }
            });
        } else {
            post();
        }
    }

    function post() {
        $('#form1').form('submit', {
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (msg) {
                $.messager.alert('提示', "保存成功", 'info', function () {
                    window.location.href = "/ColumnmenuPermissionsInfo/Index/";
                });
            }
        });
    }
</script>
<body>
    <form id="form1" action="/ColumnmenuPermissionsInfo/Save/" method="post">
    <div class="easyui-panel" title="栏目信息" style="width: auto" data-options="collapsible:true,border:true">
        <div style="padding: 10px 0 10px 100px;">
            <input style="width: 130px; display:none" class="easyui-validatebox" type="text"  value='@Model.ID' data-options="required:true" name="ID" id="ID" />
            <table style="text-align: center; width: auto">
                <tr>
                    <td>
                        栏目名:
                    </td>
                    <td>
                        <select style="width: 130px;" class="easyui-combobox" name="ColumnmenuInfoID" id="ColumnmenuInfoID"
                            data-options="required:true,editable:false">
                            @foreach (ColumnmenuInfo item in ViewBag.ColumnmenuInfo)
                            {
                                if (Model.ColumnmenuInfo.MenuId == item.MenuId)
                                {
                                <option value="@item.MenuId" selected="selected">@item.MenuName</option>
                                }
                                else
                                {
                                <option value="@item.MenuId">@item.MenuName</option>
                                }
                            }
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        用户组:
                    </td>
                    <td>
                        <select style="width: 130px;" class="easyui-combobox" name="UserGroupID" id="UserGroupID"
                            data-options="required:true,editable:false">
                            @foreach (UserGroup item in ViewBag.UserGroup)
                            {
                                if (Model.UserGroup.ID == item.ID)
                                {
                                <option value="@item.ID" selected="selected">@item.UserGroupName</option>
                                }
                                else
                                {
                                <option value="@item.ID">@item.UserGroupName</option>
                                }
                            }
                        </select>
                    </td>
                </tr>
            </table>
        </div>
        <span id="uploadify"></span>
        <div style="text-align: center; padding: 5px 220px 10px 10px">
            <a href="javascript:void(0)" class="easyui-linkbutton" onclick="submitForm()" id="submit"
                iconcls="icon-save">确定</a> <a href="javascript:void(0)" class="easyui-linkbutton"
                    onclick="location.href = document.referrer;" iconcls="icon-cancel">返回</a>
        </div>
    </div>
    </form>
</body>
